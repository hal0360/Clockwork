<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="nz.co.udenbrothers.clockwork.SignActivity">

    <ImageView
        android:contentDescription="@string/imgDes"
        app:layout_widthPercent="22%"
        app:layout_heightPercent="22%"
        app:layout_marginTopPercent="16%"
        android:layout_centerHorizontal="true"
        android:src="@drawable/app_logo" />

    <ImageView
        android:contentDescription="@string/imgDes"
        app:layout_widthPercent="42%"
        app:layout_heightPercent="7%"
        app:layout_marginTopPercent="36%"
        android:layout_centerHorizontal="true"
        android:src="@drawable/app_words" />

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="90%"
        app:layout_heightPercent="8%"
        app:layout_marginTopPercent="62%"
        android:layout_centerHorizontal="true"
        android:id="@+id/signUpButton"
        android:textSize="20sp"
        android:text="SIGN UP"
        android:textColor="#FFFFFF"
        android:background="@drawable/orange_button" />

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="90%"
        app:layout_heightPercent="8%"
        app:layout_marginTopPercent="73%"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:text="SIGN IN"
        android:textColor="#FFFFFF"
        android:id="@+id/signInButton"
        android:background="@drawable/blue_button"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="87%"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:id="@+id/signInTxt"
        android:text="Already have account? Sign in"
        android:textColor="#ffffff"
        android:textSize="19sp" />


</android.support.percent.PercentRelativeLayout>
