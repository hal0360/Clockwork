<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="nz.co.udenbrothers.clockwork.SignInActivity">

    <ImageView
        android:contentDescription="@string/imgDes"
        app:layout_widthPercent="22%"
        app:layout_heightPercent="22%"
        app:layout_marginTopPercent="8%"
        android:layout_centerHorizontal="true"
        android:src="@drawable/app_logo" />

    <ImageView
        android:contentDescription="@string/imgDes"
        app:layout_widthPercent="42%"
        app:layout_heightPercent="7%"
        app:layout_marginTopPercent="27%"
        android:layout_centerHorizontal="true"
        android:src="@drawable/app_words" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="36%"
        android:layout_centerHorizontal="true"
        android:text="SIGN IN"
        android:textColor="#ffffff"
        android:textSize="27sp" />

    <android.support.percent.PercentRelativeLayout
        app:layout_heightPercent="16%"
        app:layout_marginTopPercent="42%"
        app:layout_widthPercent="90%"
        android:layout_centerHorizontal="true"
        android:background="@drawable/border_field">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            app:layout_marginStartPercent="5%"
            app:layout_marginLeftPercent="5%"
            app:layout_marginTopPercent="14.5%"
            android:contentDescription="@string/imgDes"
            android:src="@drawable/email_icon" />

        <EditText
            android:id="@+id/editMail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="50%"
            app:layout_marginTopPercent="0%"
            android:paddingLeft="50dp"
            android:paddingStart="50dp"
            android:background="@null"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="#FFFF00"
            android:textColorHint="#FFFFFF" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_marginTopPercent="50%"
            android:background="#FFFFFF" />

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            app:layout_marginStartPercent="5%"
            app:layout_marginLeftPercent="5%"
            app:layout_marginTopPercent="62.5%"
            android:contentDescription="@string/imgDes"
            android:src="@drawable/password_icon" />

        <EditText
            android:id="@+id/editPass"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="50%"
            app:layout_marginTopPercent="50%"
            android:paddingLeft="50dp"
            android:paddingStart="50dp"
            android:background="@null"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="#FFFF00"
            android:textColorHint="#FFFFFF" />

    </android.support.percent.PercentRelativeLayout>

    <CheckBox
        android:id="@+id/termCondd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginStartPercent="4%"
        app:layout_marginLeftPercent="4%"
        app:layout_marginTopPercent="77%"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"
        android:text="I agree to the Terms Of Service"
        android:textColor="#FFFFFF" />

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="90%"
        app:layout_heightPercent="8%"
        app:layout_marginTopPercent="90%"
        android:layout_centerHorizontal="true"
        android:id="@+id/signInButton"
        android:textSize="17sp"
        android:text="SIGN IN"
        android:textColor="#FFFFFF"
        android:background="@drawable/blue_button"/>

</android.support.percent.PercentRelativeLayout>
