<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="nz.co.udenbrothers.clockwork.SignUpBusinessActivity">

    <ImageView
        android:contentDescription="@string/imgDes"
        app:layout_widthPercent="22%"
        app:layout_heightPercent="22%"
        app:layout_marginTopPercent="8%"
        android:layout_centerHorizontal="true"
        android:src="@drawable/app_logo" />

    <ImageView
        android:contentDescription="@string/imgDes"
        app:layout_widthPercent="42%"
        app:layout_heightPercent="7%"
        app:layout_marginTopPercent="27%"
        android:layout_centerHorizontal="true"
        android:src="@drawable/app_words" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="36%"
        android:layout_centerHorizontal="true"
        android:text="SIGN UP"
        android:textColor="#ffffff"
        android:textSize="27sp" />

    <android.support.percent.PercentRelativeLayout
        app:layout_heightPercent="40%"
        app:layout_marginTopPercent="42%"
        app:layout_widthPercent="90%"
        android:layout_centerHorizontal="true"
        android:background="@drawable/border_field">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            app:layout_marginStartPercent="5%"
            app:layout_marginLeftPercent="5%"
            app:layout_marginTopPercent="5%"
            android:contentDescription="@string/imgDes"
            android:src="@drawable/company_icon" />

        <EditText
            android:id="@+id/editBussCom"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="20%"
            app:layout_marginTopPercent="0%"
            android:paddingLeft="50dp"
            android:paddingStart="50dp"
            android:background="@null"
            android:hint="Company Name"
            android:inputType="text"
            android:textColor="#FFFF00"
            android:textColorHint="#FFFFFF" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_marginTopPercent="20%"
            android:background="#FFFFFF" />

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            app:layout_marginStartPercent="5%"
            app:layout_marginLeftPercent="5%"
            app:layout_marginTopPercent="25%"
            android:contentDescription="@string/imgDes"
            android:src="@drawable/name_icon" />

        <EditText
            android:id="@+id/editBussName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="20%"
            app:layout_marginTopPercent="20%"
            android:paddingLeft="50dp"
            android:paddingStart="50dp"
            android:background="@null"
            android:hint="Your Name"
            android:inputType="text"
            android:textColor="#FFFF00"
            android:textColorHint="#FFFFFF" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_marginTopPercent="40%"
            android:background="#FFFFFF" />

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            app:layout_marginStartPercent="5%"
            app:layout_marginLeftPercent="5%"
            app:layout_marginTopPercent="45%"
            android:contentDescription="@string/imgDes"
            android:src="@drawable/email_icon" />

        <EditText
            android:id="@+id/editBussMail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="20%"
            app:layout_marginTopPercent="40%"
            android:paddingLeft="50dp"
            android:paddingStart="50dp"
            android:background="@null"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="#FFFF00"
            android:textColorHint="#FFFFFF" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_marginTopPercent="60%"
            android:background="#FFFFFF" />

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            app:layout_marginStartPercent="5%"
            app:layout_marginLeftPercent="5%"
            app:layout_marginTopPercent="65%"
            android:contentDescription="@string/imgDes"
            android:src="@drawable/password_icon" />

        <EditText
            android:id="@+id/editBussPass"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="20%"
            app:layout_marginTopPercent="60%"
            android:paddingLeft="50dp"
            android:paddingStart="50dp"
            android:background="@null"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="#FFFF00"
            android:textColorHint="#FFFFFF" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_marginTopPercent="80%"
            android:background="#FFFFFF" />

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            app:layout_marginStartPercent="5%"
            app:layout_marginLeftPercent="5%"
            app:layout_marginTopPercent="85%"
            android:contentDescription="@string/imgDes"
            android:src="@drawable/password_icon" />

        <EditText
            android:id="@+id/editBussPass2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="20%"
            app:layout_marginTopPercent="80%"
            android:paddingLeft="50dp"
            android:paddingStart="50dp"
            android:background="@null"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:textColor="#FFFF00"
            android:textColorHint="#FFFFFF" />

    </android.support.percent.PercentRelativeLayout>

    <CheckBox
        android:id="@+id/termCond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginStartPercent="4%"
        app:layout_marginLeftPercent="4%"
        app:layout_marginTopPercent="83.5%"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"
        android:text="I agree to the Terms Of Service"
        android:textColor="#FFFFFF" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="90%"
        app:layout_heightPercent="8%"
        app:layout_marginTopPercent="90%"
        android:layout_centerHorizontal="true"
        android:id="@+id/businessCreateButton"
        android:background="@drawable/blue_button">

        <ImageView
            android:contentDescription="@string/imgDes"
            android:layout_height="25dp"
            android:layout_width="25dp"
            android:src="@drawable/business_button"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:id="@+id/imageViewioi" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="SIGN UP AS A BUSINESS"
            android:textColor="#FFFFFF"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageViewioi"
            android:layout_toEndOf="@+id/imageViewioi"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp" />

    </RelativeLayout>

</android.support.percent.PercentRelativeLayout>
