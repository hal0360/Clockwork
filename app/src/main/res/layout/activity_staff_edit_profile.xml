<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_staff_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="nz.co.udenbrothers.clockwork.StaffEditProfileActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#FF8C00"
        app:layout_heightPercent="8%">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="PROFILE"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:id="@+id/textView3"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/imageHam"
            android:layout_width="53dp"
            android:layout_height="45dp"
            android:paddingLeft="12dp"
            android:paddingStart="12dp"
            android:paddingRight="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:contentDescription="@string/imgDes"
            android:src="@drawable/dark_hamburger"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="10%"
        app:layout_marginLeftPercent="5%"
        app:layout_marginStartPercent="5%"
        android:text="Email:"
        android:textColor="#000000"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editEditMail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="8%"
        app:layout_marginTopPercent="14%"
        app:layout_widthPercent="90%"
        android:background="@null"
        android:inputType="text"
        android:textColor="#0000FF"
        android:layout_centerHorizontal="true"
        android:textSize="17sp" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_marginTopPercent="22%"
        app:layout_widthPercent="90%"
        android:layout_centerHorizontal="true"
        android:background="#000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="28%"
        app:layout_marginLeftPercent="5%"
        app:layout_marginStartPercent="5%"
        android:text="First name:"
        android:textColor="#000000"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editEditFname"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="8%"
        app:layout_marginTopPercent="32%"
        app:layout_widthPercent="90%"
        android:background="@null"
        android:inputType="text"
        android:textColor="#0000FF"
        android:layout_centerHorizontal="true"
        android:textSize="17sp" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_marginTopPercent="40%"
        app:layout_widthPercent="90%"
        android:layout_centerHorizontal="true"
        android:background="#000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="46%"
        app:layout_marginLeftPercent="5%"
        app:layout_marginStartPercent="5%"
        android:text="Last name:"
        android:textColor="#000000"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editEditLname"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="8%"
        app:layout_marginTopPercent="50%"
        app:layout_widthPercent="90%"
        android:background="@null"
        android:inputType="text"
        android:textColor="#0000FF"
        android:layout_centerHorizontal="true"
        android:textSize="17sp" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_marginTopPercent="58%"
        app:layout_widthPercent="90%"
        android:layout_centerHorizontal="true"
        android:background="#000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="64%"
        app:layout_marginLeftPercent="5%"
        app:layout_marginStartPercent="5%"
        android:text="Company:"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/editCompany"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="8%"
        app:layout_marginTopPercent="68%"
        app:layout_widthPercent="60%"
        android:textColor="#0000FF"
        app:layout_marginLeftPercent="5%"
        app:layout_marginStartPercent="5%"
        android:textSize="17sp" />

    <Button
        android:layout_width="0dp"
        app:layout_widthPercent="20%"
        android:layout_height="0dp"
        app:layout_heightPercent="6%"
        android:id="@+id/addCompButton"
        app:layout_marginTopPercent="69%"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:text="+ADD"
        android:textSize="17sp"
        android:textColor="#ffffff"
        android:background="@drawable/green_button"
        app:layout_marginLeftPercent="70%"
        app:layout_marginStartPercent="70%"/>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_marginTopPercent="76%"
        app:layout_widthPercent="90%"
        android:layout_centerHorizontal="true"
        android:background="#000" />

    <Button
        android:layout_width="0dp"
        app:layout_widthPercent="90%"
        android:layout_height="0dp"
        app:layout_heightPercent="8%"
        android:id="@+id/saveChangeButton"
        app:layout_marginTopPercent="90%"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:text="SAVE CHANGES"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:background="@drawable/blue_button"
        android:layout_centerHorizontal="true" />

</android.support.percent.PercentRelativeLayout>
