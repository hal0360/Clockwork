<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="310dp"
    android:layout_height="400dp"
    android:background="#fff"
    tools:context="nz.co.udenbrothers.clockwork.StaffExportActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="3%"
        android:layout_centerHorizontal="true"
        android:text="EXPORT DATA"
        android:textColor="#000000"
        android:textSize="25sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="15%"
        app:layout_marginLeftPercent="5%"
        app:layout_marginStartPercent="5%"
        android:text="Email to export:"
        android:textColor="#000000"
        android:textSize="18sp" />


    <EditText
        android:id="@+id/editSendMaill"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="12%"
        app:layout_marginTopPercent="20%"
        app:layout_widthPercent="90%"
        android:background="@null"
        android:inputType="textEmailAddress"
        android:textColor="#0000FF"
        android:textSize="17sp"
        android:layout_centerHorizontal="true"/>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_marginTopPercent="32%"
        app:layout_widthPercent="90%"
        android:layout_centerHorizontal="true"
        android:background="#000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="37%"
        app:layout_marginLeftPercent="5%"
        app:layout_marginStartPercent="5%"
        android:text="Time period to export:"
        android:textColor="#000000"
        android:textSize="18sp" />


    <Spinner
        android:id="@+id/editPeriod"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="12%"
        app:layout_marginTopPercent="42%"
        app:layout_widthPercent="90%"
        android:layout_centerHorizontal="true" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_marginTopPercent="54%"
        app:layout_widthPercent="90%"
        android:layout_centerHorizontal="true"
        android:background="#000" />

    <Button
        android:id="@+id/doExportButton"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_centerHorizontal="true"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="90%"
        app:layout_heightPercent="11%"
        app:layout_marginTopPercent="86%"
        android:background="@drawable/red_button"
        android:text="EXPORT"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

</android.support.percent.PercentRelativeLayout>
